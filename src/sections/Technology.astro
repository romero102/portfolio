---
import {Technologies} from "../content/Technologies"
import { Icon } from 'astro-icon/components'
---

<section class="my-3 p-3">
<p class="text-center font-onest text-xl
     text-gray-500">TECNOLOGIAS <span class="font-orbitron text-secondary text-2xl">4+</span></p>
<div class="flex flex-wrap gap-2 mt-3 p-3 justify-center">
{Technologies.map((technology) => (<div class="p-1 my-2"><Icon class="w-16 h-16 mx-auto" name={technology.icon} /><p class="font-orbitron text-lg font-semibold text-center p-3">{technology.name}</p></div>))}
</div>
</section>

